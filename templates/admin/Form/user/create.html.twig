{# templates/vehicle/create.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<title>Ajouter un User</title>
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
		<style>
			/* Centrer le formulaire */
			.form-container {
				margin-top: 50px;
			}

			/* Style pour les inputs */
			input[type="text"],
			textarea {
				width: 100%;
				padding: 10px;
				margin-bottom: 10px;
				border-radius: 5px;
				border: 1px solid #ccc;
			}

			input[type="submit"] {
				padding: 10px 20px;
				border-radius: 5px;
				border: none;
				background-color: #007bff;
				color: white;
				cursor: pointer;
			}
		</style>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="navbar-brand" href="{{ path('homeAdmin') }}">Kaya admin</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarCollapse">
				<ul class="navbar-nav ml-auto">
					{% if app.user %}
						<!-- Si l'utilisateur est connecté -->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('user_details') }}">Profil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
						</li>
					{% else %}
						<!-- Si l'utilisateur n'est pas connecté -->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 form-container">
					<h4>Ajouter un User</h4>

					{{ form_start(form) }}
					{{ form_row(form.pseudo) }}
					{{ form_row(form.password) }}
					{{ form_row(form.nom) }}
					{{ form_row(form.prenom) }}
					{{ form_row(form.email) }}
					{{ form_label(form.civilite, 'Civilité') }}
					{{ form_widget(form.civilite, {'attr': {'class': 'form-control'}}) }}
					{{ form_end(form) }}
				</div>
			</div>
		</div>
		<!-- Inclure Bootstrap JS -->
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	</body>
</html>
