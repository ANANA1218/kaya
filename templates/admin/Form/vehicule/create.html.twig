{# templates/vehicle/create.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<title>Ajouter un véhicule</title>
	</head>
	<body>

		<h1>Ajouter un véhicule</h1>

		{{ form_start(form) }}
		{{ form_row(form.titre) }}
		{{ form_row(form.marque) }}
		{{ form_row(form.modele) }}
		{{ form_row(form.description) }}
		{{ form_row(form.photo, {
    		'attr': {
       				 'accept': 'image/*' 
    				}
		}) }}

		{{ form_row(form.prixJournalier) }}
		{{ form_row(form.save) }}
		{{ form_end(form) }}

	</body>
</html>
