{# templates/admin/home.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<title>Page d'accueil admin</title>
		<!-- Inclure Bootstrap CSS ou tout autre CSS pour la mise en forme -->
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body>

		<!-- Barre de navigation -->
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="navbar-brand" href="{{ path('homeAdmin') }}">Kaya admin</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarCollapse">
				<ul class="navbar-nav ml-auto">
					{% if app.user %}
						<!-- Si l'utilisateur est connecté -->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('user_details') }}">Profil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
						</li>
					{% else %}
						<!-- Si l'utilisateur n'est pas connecté -->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>

		<!-- Contenu principal -->
		<div class="container-fluid">
			<div
				class="row">
				<!-- Colonne de filtres -->
				<div class="col-md-3 mt-4">
					<h4>Filtres</h4>
					<!-- Ajoutez ici vos filtres pour les véhicules, commandes, utilisateurs -->
					<!-- Par exemple, des liens vers les listes correspondantes -->
					<ul class="list-group">
						<li class="list-group-item">
							<a href="{{ path('vehicules_list') }}">Filtrer par Véhicules</a>
						</li>
						<li class="list-group-item">
							<a href="{{ path('users_list') }}">Filtrer par Utilisateurs</a>
						</li>
						<li class="list-group-item">
							<a href="{{ path('orders_list') }}">Filtrer par	Commande</a>
						</li>
					</ul>
				</div>

				<!-- Contenu principal - Liste des véhicules, commandes, utilisateurs -->
				<div
					class="col-md-9 mt-4">
					<!-- Le contenu principal sera rempli dynamiquement en fonction du filtre sélectionné -->
					<h4>Contenu principal</h4>
					<!-- Ajoutez ici la liste des véhicules, commandes ou utilisateurs en fonction du filtre -->
					<!-- Ce contenu sera rempli dynamiquement -->
				</div>
			</div>
		</div>

		<!-- Inclure Bootstrap JS -->
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	</body>
</html>
