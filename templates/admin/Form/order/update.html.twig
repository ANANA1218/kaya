<!DOCTYPE html>
<html>
	<head>
		<title>Modifier une commande</title>
		<!-- Inclure Bootstrap CSS ou tout autre CSS pour la mise en forme -->
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body>
		<div class="container mt-4">
			<h1>Modifier une commande
			</h1>

			{{ form_start(form) }}

			<div class="form-group">
				{{ form_label(form.user, 'ID user') }}
				{{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.vehicule, 'ID Véhicule') }}
				{{ form_widget(form.vehicule, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.date_heure_depart, 'Date et heure de départ') }}
				{{ form_widget(form.date_heure_depart, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.date_heure_fin, 'Date et heure de fin') }}
				{{ form_widget(form.date_heure_fin, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.prix_total, 'Prix total') }}
				{{ form_widget(form.prix_total, {'attr': {'class': 'form-control'}}) }}
			</div>

			<button type="submit" class="btn btn-primary">Modifier</button>
			{{ form_end(form) }}
		</div>
	</body>
</html>
