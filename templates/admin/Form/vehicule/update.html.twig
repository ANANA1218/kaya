{# templates/admin/Form/vehicule/update.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<title>Modifier un véhicule</title>
		<!-- Inclure Bootstrap CSS ou tout autre CSS pour la mise en forme -->
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="navbar-brand" href="{{ path('homeAdmin') }}">Kaya admin</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarCollapse">
				<ul class="navbar-nav ml-auto">
					{% if app.user %}
						<!-- Si l'utilisateur est connecté -->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('user_details') }}">Profil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
						</li>
					{% else %}
						<!-- Si l'utilisateur n'est pas connecté -->
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>
		<div class="container mt-4">
			<h1>Modifier un véhicule</h1>

			{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.titre, 'Titre') }}
				{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.marque, 'Marque') }}
				{{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.modele, 'Modèle') }}
				{{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.description, 'Description') }}
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.photo, 'Photo') }}
				{{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.prixJournalier, 'Prix journalier') }}
				{{ form_widget(form.prixJournalier, {'attr': {'class': 'form-control'}}) }}
			</div>


			{{ form_end(form) }}
		</div>
	</body>
</html>
